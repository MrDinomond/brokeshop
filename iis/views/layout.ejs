<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <!-- Переключатель темы -->
    <div class="theme-toggle" onclick="toggleTheme()" title="Переключить тему">
        <i class="fas fa-moon"></i>
    </div>
    <header>
        <nav class="navbar">
            <div class="nav-container">
                <div class="nav-brand">
                    <a href="/shop">BrokeShop</a>
                </div>

                <div class="nav-menu">
                    <div class="nav-links">
                        <a href="/shop" class="nav-link">
                            <i class="fas fa-store"></i> Товары
                        </a>
                        <a href="/tutorials" class="nav-link active">
                                    <i class="fas fa-book"></i> Туториалы
                                </a>
                        <% if (typeof user !== 'undefined' && user) { %>
                            <a href="/cart" class="nav-link">
                                <i class="fas fa-shopping-cart"></i> Корзина
                                <% if (typeof cartCount !== 'undefined' && cartCount > 0) { %>
                                    <span class="cart-count"><%= cartCount %></span>
                                <% } %>
                            </a>
                            <a href="/cart/orders" class="nav-link">
                                <i class="fas fa-clipboard-list"></i> Заказы
                            </a>
                        <% } %>
                    </div>
                    
                    <% if (typeof user !== 'undefined' && user) { %>
                        <div class="nav-user">
                            <span>Привет, <%= user %>!</span>
                                <% if (userRole === 'admin' || userRole === 'root') { %>
                                    <a href="/admin" class="nav-link">
                                        <i class="fas fa-cog"></i> Админка
                                    </a>
                                <% } %>
                                <form action="/auth/logout" method="POST" style="display: inline;">
                                    <button type="submit" class="nav-link logout-btn">
                                        <i class="fas fa-sign-out-alt"></i> Выйти
                                    </button>
                                </form>
                            </div>
                        </div>
                    <% } else { %>
                        <div class="nav-links">
                            <a href="/auth/login" class="nav-link">Вход</a>
                            <a href="/auth/register" class="nav-link">Регистрация</a>
                            <a href="/tutorials" class="nav-link">
                                <i class="fas fa-graduation-cap"></i> Туториалы
                            </a>
                        </div>
                    <% } %>
                </div>
            </div>
        </nav>
    </header>

    <main>
        <% if (typeof error !== 'undefined' && error.length > 0) { %>
            <div class="alert alert-error">
                <%= error %>
            </div>
        <% } %>

        <% if (typeof success !== 'undefined' && success.length > 0) { %>
            <div class="alert alert-success">
                <%= success %>
            </div>
        <% } %>

        <%- body %>
    </main>

    <footer>
        <div class="footer-content">
            <p>&copy; 2024 BrokeShop. Все права защищены.</p>
        </div>
    </footer>

    <script src="/js/script.js"></script>
</body>
</html>
