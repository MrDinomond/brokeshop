<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Магазин</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/shop.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <!-- Переключатель темы -->
    <div class="theme-toggle" onclick="toggleTheme()" title="Переключить тему">
        <i class="fas fa-moon"></i>
    </div>
    <header>
        <nav class="navbar">
            <div class="nav-container">
                <div class="nav-brand">
                    <a href="/shop">Магазин</a>
                </div>

                <div class="nav-menu">
                    <% if (typeof user !== 'undefined' && user) { %>
                        <div class="nav-user">
                            <span>Привет, <%= user %>!</span>
                            <div class="nav-links">
                                <a href="/shop" class="nav-link">
                                    <i class="fas fa-store"></i> Товары
                                </a>
                                <a href="/cart" class="nav-link">
                                    <i class="fas fa-shopping-cart"></i> Корзина
                                    <% if (typeof cartCount !== 'undefined' && cartCount > 0) { %>
                                        <span class="cart-count"><%= cartCount %></span>
                                    <% } %>
                                </a>
                                <a href="/cart/orders" class="nav-link">
                                    <i class="fas fa-clipboard-list"></i> Заказы
                                </a>
                                <% if (typeof userRole !== 'undefined' && (userRole === 'admin' || userRole === 'root')) { %>
                                    <a href="/admin" class="nav-link">
                                        <i class="fas fa-cog"></i> Админ-панель
                                    </a>
                                <% } %>
                                <form action="/auth/logout" method="POST" style="display: inline;">
                                    <button type="submit" class="nav-link logout-btn">
                                        <i class="fas fa-sign-out-alt"></i> Выйти
                                    </button>
                                </form>
                            </div>
                        </div>
                    <% } else { %>
                        <div class="nav-links">
                            <a href="/auth/login" class="nav-link">Вход</a>
                            <a href="/auth/register" class="nav-link">Регистрация</a>
                        </div>
                    <% } %>
                </div>
            </div>
        </nav>
    </header>

    <main>
        <% if (typeof error !== 'undefined' && error.length > 0) { %>
            <div class="alert alert-error">
                <%= error %>
            </div>
        <% } %>

        <% if (typeof success !== 'undefined' && success.length > 0) { %>
            <div class="alert alert-success">
                <%= success %>
            </div>
        <% } %>

        <div class="shop-container">
            <div class="shop-header">
                <h1>Добро пожаловать в наш магазин!</h1>

                <div class="search-container">
                    <form action="/shop/search" method="GET" class="search-form">
                        <input type="text" name="q" placeholder="Поиск товаров..." value="<%= search %>">
                        <button type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>
                </div>
            </div>

            <div class="products-grid">
                <% if (products.length === 0) { %>
                    <div class="no-products">
                        <i class="fas fa-search"></i>
                        <p>Товары не найдены</p>
                    </div>
                <% } else { %>
                    <% products.forEach(product => { %>
                        <div class="product-card" onclick="goToProduct(<%= product.id %>)">
                            <div class="product-image">
                                <% if (product.image) { %>
                                    <% const imgSrc = product.image.startsWith('/images/') ? product.image : `/images/${product.image}`; %>
                                    <img src="<%= imgSrc %>" alt="<%= product.name %>" onerror="this.onerror=null; this.src='/images/default.jpg';">
                                <% } else { %>
                                    <div class="no-image">
                                        <i class="fas fa-image"></i>
                                        <span>Нет изображения</span>
                                    </div>
                                <% } %>
                                <div class="product-actions">
                                    <form action="/cart/add/<%= product.id %>" method="POST" onclick="event.stopPropagation()">
                                        <input type="number" name="quantity" value="1" min="1" class="quantity-input">
                                        <button type="submit" class="add-to-cart-btn">
                                            <i class="fas fa-cart-plus"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>

                            <div class="product-info">
                                <h3 class="product-name">
                                    <%= product.name %>
                                </h3>
                                <p class="product-description"><%= product.description %></p>
                                <div class="product-footer">
                                    <span class="product-price"><%= product.price %> ₽</span>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } %>
            </div>
        </div>
    </main>

    <footer>
        <div class="footer-content">
            <p>&copy; 2025 Простой Магазин. Все права защищены.</p>
        </div>
    </footer>

    <script src="/js/script.js"></script>
    <script>
    // Инициализация темы для магазина
    document.addEventListener('DOMContentLoaded', function() {
        initializeTheme();
        console.log('Shop theme initialized:', localStorage.getItem('theme') || 'light');
    });

    // Функция для перехода к детальной странице товара
    function goToProduct(productId) {
        window.location.href = '/shop/product/' + productId;
    }
    </script>
</body>
</html>
