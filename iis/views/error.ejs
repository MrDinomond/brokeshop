<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'Ошибка' %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/error.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <!-- Переключатель темы -->
    <div class="theme-toggle" onclick="toggleTheme()" title="Переключить тему">
        <i class="fas fa-moon"></i>
    </div>
    <main>
        <div class="error-container">
            <div class="error-content">
                <i class="fas fa-exclamation-triangle"></i>
                <h1><%= typeof status !== 'undefined' ? status : '500' %></h1>
                <p><%= typeof message !== 'undefined' ? message : 'Произошла ошибка на сервере' %></p>
                <a href="/shop" class="back-btn">Вернуться в магазин</a>
            </div>
        </div>
    </main>

    <script src="/js/script.js"></script>
    <script>
    // Инициализация темы для страницы 404
    document.addEventListener('DOMContentLoaded', function() {
        initializeTheme();
        console.log('Error page theme initialized:', localStorage.getItem('theme') || 'light');
    });
    </script>
</body>
</html>
